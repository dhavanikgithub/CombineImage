<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CombineImage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFDC143C</item> <!-- Crimson 500 -->
        <item name="colorPrimaryVariant">#FFB7001F</item> <!-- Crimson 700 -->
        <item name="colorOnPrimary">#FFFFFFFF</item> <!-- White -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFFF8080</item> <!-- Light Coral 200 -->
        <item name="colorSecondaryVariant">#FFFF8080</item> <!-- Light Coral 200 -->
        <item name="colorOnSecondary">#FF000000</item> <!-- Black -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/TextAppearance.DarkTheme</item>

        <item name="floatingActionButtonSmallStyle">@color/fab_dark_color</item>
    </style>

    <!-- Custom style for TextView in Dark Theme -->
    <style name="TextAppearance.DarkTheme">
        <item name="android:textColor">@color/text_color_dark</item>
        <!-- Add other text appearance attributes for the dark theme if needed -->
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextAppearance"></style>

</resources>