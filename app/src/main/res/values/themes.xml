<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CombineImage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF03A9F4</item> <!-- Deep Sky Blue 500 -->
        <item name="colorPrimaryVariant">#FF0288D1</item> <!-- Deep Sky Blue 700 -->
        <item name="colorOnPrimary">#FFFFFFFF</item> <!-- White -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFFFA07A</item> <!-- Light Salmon 200 -->
        <item name="colorSecondaryVariant">#FFFFA07A</item> <!-- Light Salmon 200 -->
        <item name="colorOnSecondary">#FF000000</item> <!-- Black -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/TextAppearance.LightTheme</item>

        <item name="floatingActionButtonSmallStyle">@color/fab_light_color</item>

    </style>

    <!-- Custom style for TextView in Light Theme -->
    <style name="TextAppearance.LightTheme">
        <item name="android:textColor">@color/text_color_light</item>
        <!-- Add other text appearance attributes for the light theme if needed -->
    </style>



    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.CombineImage.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CombineImage.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CombineImage.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance"></style>

</resources>